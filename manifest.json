{
  "name": "UTM Generator",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Generate Custom UTM Parameters for Your Favorite Sites.",
  "homepage_url": "http://ethanthompson.org",
  "options_page": "src/options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "browser action demo",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "storage"
  ]
}
